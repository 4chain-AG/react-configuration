{
  "include": ["src"],
  "exclude": ["dist", "node_modules", "**/*.test.js"],
  "files": ["src/index.ts"],
  "compilerOptions": {
    "importHelpers": false,
    "declaration": true,
    "sourceMap": false,
    "rootDir": "./src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
